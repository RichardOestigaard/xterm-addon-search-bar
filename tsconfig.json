{
  "compilerOptions": {
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "target": "esnext",
    "module": "esnext",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": false,
    "sourceMap": true,
    "downlevelIteration": true,
    "strictPropertyInitialization": false,
    "declaration": true,
    "declarationDir": "./typings"
  },
  "exclude": ["node_modules"],
  "files": ["src/index.ts"]
}
